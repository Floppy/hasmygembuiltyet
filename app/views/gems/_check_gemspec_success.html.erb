<p id="gemspec-status">
  <strong><%=h @project %>.gemspec</strong> loaded OK.
  <table>
    <tr>
      <td>
        Gem name:
      </td>
      <td style="font-weight: bold">
        <%=h @gemspec.name %>
      </td>
    </tr><tr>
      <td>
        Version:
      </td>
      <td style="font-weight: bold">
        <%=h @gemspec.version %>
      </td>
    </tr>
  </table>
</p>
<p id="gem">
  <span id="gem-status">
    Checking status... <%= image_tag 'ajax-loader.gif' %>
  </span>
  <%= periodically_call_remote(:url => {:controller => 'gems', :action => 'status', :user => @user, :project => @project}, :frequency => '15', :method => :get) %>
</p>